{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noLib": false,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": false
  },
  "include": ["./src"],
  "exclude": ["node_modules", "test/*", "examples/*"]
}
